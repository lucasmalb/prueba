<div class="mx-auto px-4">
  <div class="mx-auto my-2 text-center border-2 text-uppercase">
    <h1>Bienvenido</h1>
  </div>

  

  <section class="featured-products">
    <h2>Productos Destacados</h2>
    {{#if products}}
      {{#each products}}
        <div class="product">
          <img src="{{this.thumbnail}}" alt="{{this.title}}" />
          <h3>{{this.title}}</h3>
          <p>${{this.price}}</p>
          <a href="/products"><button>Comprar</button></a>
        </div>
      {{/each}}
    {{else}}
      <h1 class="text-center md:mt-12 text-lg">No hay productos agregados por el
        momento...</h1>
    {{/if}}
  </section>
</div>